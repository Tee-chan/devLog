datasource db {
  provider = "sqlite"
}

generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

model User {
  id    String  @id @default(cuid())
  name  String?
  email String? @unique
  emailVerified DateTime?
  image String?
  accounts Account[]
  commits  Commit[]
  repos    Repo[]
  sessions Session[]
  settings UserSettings?
}

model UserSettings {
  id          String   @id @default(cuid())
  userId      String   @unique
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  llmBaseUrl  String   @default("http://localhost:11434")
  llmModel    String   @default("llama3.2")
  llmApiKey   String?
  llmProvider String   @default("custom")
  updatedAt   DateTime @updatedAt
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Repo {
  id        String   @id @default(cuid())
  owner     String
  name      String
  fullName  String   @unique
  url           String
  webhookSecret String?
  userId        String?
  user          User?    @relation(fields: [userId], references: [id])
  commits       Commit[]
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model Commit {
  id          String    @id @default(cuid())
  sha         String    @unique
  message     String
  authorName  String?
  authoredAt  DateTime
  committedAt DateTime?
  url         String?
  summary     String?
  repoId      String
  repo        Repo      @relation(fields: [repoId], references: [id])
  userId      String?
  user        User?   @relation(fields: [userId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}
